[includeIf "gitdir:/**"]
  path = ~/.config/git/profiles/system

[includeIf "gitdir:/root/**"]
  path = ~/.config/git/profiles/system

[includeIf "gitdir:/etc/profile.d/**"]
  path = ~/.config/git/profiles/system

[includeIf "gitdir:/usr/local/**"]
  path = ~/.config/git/profiles/system

